<!-- todo now - mudar txt -->
<% @title = "Principal" %>

<!-- todo futuro - n pod ter each, sÃ³ pode ter 1 principal ativa por vez -->
<!--todo now test - ver pra q serv o type -->
<%= render :partial => 'layouts/social', :locals => {:url => principal_path, :share_text => @title, :type => 'principal'} %>
<hr/>

<section class="principal">

  <script type="text/javascript">
      local = new Array();
  </script>

  <!-- todo now futuro - colokr icone personalizado -->
  <!-- todo now futuro - colokr icones agrupados -->
  <div id="map_canvas" style="height: 200px; width: 100%"></div>

  <hr/>

  <nav>

    <% @principals.each do |principal| %>
        <h2><%= principal.description %></h2>

        <div class="principal-links" style="margin-left: 8%;">
          <!--<a href="<%= principal_gallery_path %>">-->
          <%= image_tag principal.gallery_image.url(:thumb)%>
          <h4>Fotos</h4>
          <!--</a>-->
        </div>

        <div class="principal-links">
          <!--<a href="<%= principal_events_path %>">-->
          <%= image_tag principal.events_image.url(:thumb)%>
          <h4>Eventos</h4>
          <!--</a>-->
        </div>

        <div class="principal-links">
          <a href="<%= principal_contact_path %>">
            <%= image_tag principal.contact_image.url(:thumb)%>
            <h4>Contato</h4>
          </a>
        </div>

        <div style="display: table-caption;font-size: 14px;">
          <!-- todo now - colocar links -->
          <!-- todo futuro - colokr do g+ -->
          <%= image_tag principal.follow_fb_image.url(:thumb), :class=>"principal-links" %>
          <%= image_tag principal.follow_tw_image.url(:thumb), :class=>"principal-links", :style => "padding-top:0; padding-bottom:0;" %>
          <h4 class="principal-links" style="padding-top:5px">Siga-nos!</h4>
        </div>

        <hr/>

        <!-- todo now - mudar titulo -->
        <h4>Alguns Bares</h4>

        <% @home_bars.each do |destaque| %>
            <div class="principal-destaques">

              <a href="<%= home_bar_path(destaque.name)%>" alt="<%= destaque.name %>" >

                <!-- todo now - adicionar img certa na pasta - do tamanho certo pra essa pagina -->
                <% if destaque.logo_bar_image_file_size.nil? %>
                    <% if destaque.name.length >= 17 %>
                        <img src="<%= image_path "bar0.jpg" %>" alt="<%= destaque.name %>" title="<%= destaque.name %>" class="no-image" />
                    <% else %>
                        <img src="<%= image_path "bar0.jpg" %>" alt="<%= destaque.name %>" class="no-image" />
                    <% end %>
                <% else %>
                    <% if destaque.name.length >= 17 %>
                        <%= image_tag destaque.logo_bar_image.url(:thumb), :alt => destaque.name, :title => destaque.name %>
                    <% else %>
                        <%= image_tag destaque.logo_bar_image.url(:thumb), :alt => destaque.name %>
                    <% end %>
                <% end %>

                <h5><%= destaque.name.truncate(16) %></h5>

              </a>

            </div>
        <% end %>

        <div class="principal-destaques">
          <a href="<%= all_home_bars_path %>">
            <%= image_tag principal.all_homes_image.url(:thumb), :style => "width: 100px;height: 100px;"  %>
            <!-- todo now - mudar txt -->
            <h5> <%= I18n.t("principal.index.all_bars") %> </h5>
          </a>
        </div>

        <hr/>

    <% end %>
  </nav>

  <% @all_active_bars.each_with_index do |all_active_bars, index| %>
      <!-- dados para mapa -->
      <script type="text/javascript">
        local[<%= index %>] = '<%= all_active_bars.address + ", " + all_active_bars.number.to_s + ", " + @home_bar_city.name %>';
      </script>
  <% end %>

</section>