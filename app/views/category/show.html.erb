<%= render :partial => 'layouts/social', :locals => {:url => principal_path, :share_text => @title, :type => 'all_home_bars'} %>
<hr/>

<section class="category">

  <div class="breadcrumb">
    <%= link_to I18n.t("breadcrumb_principal"), principal_path %> >
    <%= link_to I18n.t("breadcrumb_categories"), all_categories_path(params[:city_name]) %> >
    <%= @current_category.name %>
  </div>

  <hr/>

  <!--todo seb now - verificar se tem algum bar cadastrado na categoria q está entrando, c n tiver, colokr página n existent-->
  <h1><%= @current_category.name + I18n.t("home_bar.all.title") + @current_city.name %></h1>

  <nav>
    <% @home_bars.each do |destaque| %>
      <a href="<%= home_bar_path(params[:city_name], destaque.name) %>">

        <!-- todo seb now - adicionar img certa na pasta - do tamanho certo pra essa pagina -->
        <% if destaque.logo_bar_image_file_size.nil? %>
            <% if destaque.name.length >= 17 %>
                <img src="<%= image_path "bar0.jpg" %>" alt="<%= destaque.name %>" title="<%= destaque.name %>" />
            <% else %>
                <img src="<%= image_path "bar0.jpg" %>" alt="<%= destaque.name %>" />
            <% end %>
        <% else %>
            <% if destaque.name.length >= 17 %>
                <%= image_tag destaque.logo_bar_image.url(:thumb), :alt => destaque.name, :title => destaque.name %>
            <% else %>
                <%= image_tag destaque.logo_bar_image.url(:thumb), :alt => destaque.name %>
            <% end %>
        <% end %>

        <h5><%= destaque.name.truncate(16) %></h5>
      </a>
    <% end %>
  </nav>

</section>